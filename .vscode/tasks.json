{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C Lib",
      "type": "shell",
      "group": "build",
      "command": "clang-cl",
      "args": [
        "-Ot",
        "-Z7",
        "/c",
        "source/interpreter/Interpreter.c",
        "-Wno-incompatible-pointer-types",
        "-Fobuild/Interpreter",

        "-DTI_SAFE_MODE",
        // "-DTI_DEBUG_MODE"
      ]
    },
    {
      "label": "Build Main",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "clang-cl",
      "args": [
        "-Ot",
        "-Z7",
        "-Xclang", "-std=c++17",
        "source/main.cc",
        "build/Interpreter.obj",
        "-obuild/main"
      ],
      "dependsOn": [ "Build C Lib" ]
    },
    {
      "label": "Run",
      "type": "shell",
      "command": ".\\build\\main"
    }
  ]
}